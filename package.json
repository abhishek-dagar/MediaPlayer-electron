{
  "name": "my-app",
  "productName": "Media Player",
  "version": "1.0.0",
  "main": "main.js",
  "author": "",
  "discription": "this is my first application",
  "scripts": {
    "start": "electron .",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "my-app",
    "win": {
      "target": [
        "nsis"
